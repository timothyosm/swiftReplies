{
  "manifest_version": 2,

  "name": "swiftReplies",
  "description": "A simple page-scraping extension for Chrome",
  "version": "1.0",
  "author": "Timothy Osmond",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["popup.js", "js.js"],
    "persistent": true
  },

  "permissions": ["tabs", "http://*/", "https://*/"],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_popup": "popup.html"
  }
}
